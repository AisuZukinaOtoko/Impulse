<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Human Resources</title>
        <link rel="stylesheet" href="../stylesheets/HRHomepage.css">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    </head>
    <body>
        <p style="display: none;" class="hidden" id="Email"><%= user.email %></p>
        <p style="display: none;" class="hidden" id="Role"><%= user['https://impulsewebapp.azurewebsites.net/roles'][0] %></p>
        <p style="display: none;" class="hidden" id="Name"><%= user.name %></p>
   

        <nav class="horizontalNavbar">
            <h1 id="name">impulse.</h1>
            <article class="horNavButtons">
                <ul>
                    <li class="navButton">Home</li>
                   <li class="navButton"><a href="../homepage/bookcarwash.html">Book car wash</a></li> 
                   <li class="navButton"><a href="../homepage/bookmeals.html">Book meal</a></li>
                   <li class="navButton"><a href="../homepage/timesheet.html" >Timesheet</a></li>
                </ul>
            </article>
        </nav>

        <nav class="verticalNavbar">
            <article>
                <ul>
                    <li><a href="#"><img src="../../assets/ProfileIcon.svg" alt="Profile Icon" /></a></li>
                    <li><a href="#"><img src="../../assets/SettingsIcon.svg" alt="Settings Icon"/></a></li>
                    <li><a href="/logout/"><img src="../../assets/LogoutIcon.svg" alt="LogoutIcon"></a></li>
                </ul>
               
            </article>
        </nav>
        
        <section class="NameRole">
            <section class="greeting">
                <p>Hello, </p> 
                <p id="nameSurname"><%= user.name %></p>
            </section>
            <p id="role">HR</p>
        </section>

       <article class="cards">
            <article class="MainCards" >
                <!-- remove names of cards when entering the info -->
                <article id="PersonalCard">Personal card</article>
                
                <article id="MoreCards">
                    <section id="ReportsCard" onclick="MoveToReports()">
                        View Reports
                    </section>
                    <section id="ManageStaffCard" onclick="MoveToSite()">
                        Manage Staff card
                    </section>
                    <section id="RequestFeedbackCard" onclick="MoveToFeedback()">
                        Request Feedback card
                    </section>
                    <section id="ManageBookingsCard" onclick="MoveToCarwash()">
                        Manage Carwash Bookings
                    </section>
                    <section id="ManageBookingsCard2" onclick="MoveToMeals()">
                        Manage Meal Bookings
                    </section>
                </article>
            </article>

            <article class="SideCards">
                <article id="CalendarCard">
                    <section class="wrapper">
                        <header>
                          <p class="current-date"></p>
                          <article class="icons">
                            <span id="prev" class="material-symbols-rounded" ><img src="../assets/arrow_back.svg"/></span>
                            <span id="next" class="material-symbols-rounded"><img src="../assets/arrow_forward.svg" /></span>
                          </article>
                        </header>
                        <article class="calendar">
                          <ul class="weeks">
                            <li>S</li>
                            <li>M</li>
                            <li>T</li>
                            <li>W</li>
                            <li>T</li>
                            <li>F</li>
                            <li>S</li>
                          </ul>
                          <ul class="days"></ul>
                        </article>
                      </section>
                </article>
                <article  id="NotificationCard" >notification card</article>
            </article>
       </article>
       <script src="../js_files/HRHomepage.js"></script>
       <script src="../js_files/bookcarwash.js"></script>
       <script src="../js_files/bookmeals.js"></script>
       <script src="../js_files/timesheet.js"></script>

       <script src="../js_files/reportsHR.js"></script>
       <script src="../js_files/manageemployees.js"></script>
       <script src="../js_files/FeedbackHR.js"></script>
       <script src="../js_files/managecarwash.js"></script>
       <script src="../js_files/managemeals.js"></script>
       <script src="../js_files/getUsers.js"></script>

       <script>
        window.onload = function() {
            let paragraphElement = document.getElementById('Email');
            let paragraphText = paragraphElement.textContent;
            localStorage.setItem('storedData', paragraphText);
        
            let pElement = document.getElementById('Name');
            let pText = pElement.textContent;
            localStorage.setItem('storedName', pText);

            let paragraphElem = document.getElementById('Role');
                let paragraphT = paragraphElem.textContent;
                localStorage.setItem('storedRole', paragraphT);

        }
   </script>
    </body>
</html>