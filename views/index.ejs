    <link rel="stylesheet" href="/stylesheets/login.css">
    <title>Login</title>
</head>
<body>
    <% if (isAuthenticated && user['http://localhost:3000/roles'][0] === "Manager ") { %>
        <script>
            window.onload = function() {
                window.location.href = 'http://localhost:3000/ManagerHomepage.ejs';
            };
        </script>
    <% } %>
