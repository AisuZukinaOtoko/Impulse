        <script>
            window.onload = function() {
                window.location.href = 'http://localhost:3000/EmployeeHomepage.ejs';
            };
        </script>
    <% } %>
    <% if (isAuthenticated && user['http://localhost:3000/roles'][0] === "Human Resources") { %>
        <script>
            window.onload = function() {
                window.location.href = 'http://localhost:3000/HRHomepage.ejs';
